<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/white_bg_selector">

    <ImageView
        android:id="@+id/iv_pg_thum"
        android:layout_width="@dimen/bookmark_list_icon_width"
        android:layout_height="@dimen/bookmark_list_icon_height"
        android:src="@drawable/ic_empty_bookmark"
        android:background="@color/alto_light_gray_1"
        android:scaleType="fitXY"
        android:padding="0.5dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/iv_pg_thum">
        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/black"/>
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:maxLines="1"
            android:ellipsize="end"
            android:textColor="@color/gray"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_del"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_delete"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@drawable/translucent_selector"/>
</RelativeLayout>
